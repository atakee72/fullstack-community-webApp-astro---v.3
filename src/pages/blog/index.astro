---
import BlogBaseLayout from '../../layouts/BlogBaseLayout.astro';
import TagCloud from '../../components/blog/TagCloud.astro';
import BlogSearch from '../../components/blog/BlogSearch.svelte';
import { getCollection } from 'astro:content';

// Get all non-draft blog posts sorted by date
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Prepare posts for the Svelte search component
const postsForSearch = sortedPosts.map(post => ({
  id: post.id,
  title: post.data.title,
  description: post.data.description,
  pubDate: post.data.pubDate.toISOString(),
  author: post.data.author,
  tags: post.data.tags || [],
  cover: post.data.cover?.src,
  coverAlt: post.data.coverAlt
}));
---

<BlogBaseLayout title="Blog" description="Community stories, updates, and news from Mahalle">
  <main class="min-h-[calc(100vh-60px)] py-8">
    <div class="max-w-7xl mx-auto px-4 md:px-8">
      <!-- Header -->
      <header class="text-center mb-10">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Mahalle Blog</h1>
        <p class="text-lg text-white/80 max-w-2xl mx-auto">
          Stories, updates, and news from our community
        </p>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Main content -->
        <div class="lg:col-span-3">
          {sortedPosts.length > 0 ? (
            <BlogSearch posts={postsForSearch} client:load />
          ) : (
            <div class="text-center py-16 bg-white/10 rounded-xl">
              <svg class="w-16 h-16 mx-auto text-white/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              <h2 class="text-2xl font-bold text-white mb-2">No posts yet</h2>
              <p class="text-white/70">Check back soon for community updates!</p>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <TagCloud posts={sortedPosts} />

            <!-- About the blog -->
            <div class="bg-white/90 backdrop-blur rounded-xl shadow-lg p-5">
              <h3 class="text-lg font-bold text-gray-900 mb-3">About</h3>
              <p class="text-gray-600 text-sm">
                Welcome to the Mahalle blog! Here we share community stories,
                neighborhood updates, event highlights, and more.
              </p>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>
</BlogBaseLayout>

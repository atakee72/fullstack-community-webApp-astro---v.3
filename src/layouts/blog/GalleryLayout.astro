---
import BlogBaseLayout from '../BlogBaseLayout.astro';
import { Image } from 'astro:assets';
import ImageGallery from '../../components/blog/ImageGallery.svelte';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, author, tags, galleryImages, cover, coverAlt } = post.data;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Prepare gallery images for the Svelte component
const galleryImagesData = galleryImages?.map((img, index) => ({
  src: img.src,
  width: img.width,
  height: img.height,
  alt: `Gallery image ${index + 1}`
})) || [];
---

<BlogBaseLayout title={title} description={description}>
  <main class="min-h-[calc(100vh-60px)] py-8">
    <div class="max-w-6xl mx-auto px-4 md:px-8">
      <!-- Header -->
      <header class="text-center mb-8">
        <div class="flex flex-wrap justify-center gap-2 mb-4">
          {tags && tags.map((tag) => (
            <a
              href={`/blog/tag/${tag}`}
              class="px-3 py-1 bg-white/20 backdrop-blur text-white rounded-full text-sm font-medium hover:bg-white/30 transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-4">{title}</h1>
        <p class="text-lg md:text-xl text-white/90 mb-4 max-w-2xl mx-auto">{description}</p>
        <div class="flex items-center justify-center gap-4 text-white/80 text-sm">
          <span>{author}</span>
          <span>â€¢</span>
          <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        </div>
      </header>

      <!-- Gallery -->
      {galleryImagesData && galleryImagesData.length > 0 && (
        <div class="mb-8">
          <ImageGallery images={galleryImagesData} client:load />
        </div>
      )}

      <!-- Content -->
      <article class="bg-white rounded-xl shadow-lg p-6 md:p-10">
        <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-a:text-[#4b9aaa] prose-a:no-underline hover:prose-a:underline">
          <slot />
        </div>

        <footer class="mt-10 pt-6 border-t border-gray-200">
          <div class="flex flex-wrap items-center justify-between gap-4">
            <a
              href="/blog"
              class="inline-flex items-center text-[#4b9aaa] hover:text-[#3a7a8a] font-medium"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to Blog
            </a>

            {tags && tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <a
                    href={`/blog/tag/${tag}`}
                    class="px-3 py-1 bg-[#4b9aaa]/10 text-[#4b9aaa] rounded-full text-sm font-medium hover:bg-[#4b9aaa]/20 transition-colors"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            )}
          </div>
        </footer>
      </article>
    </div>
  </main>
</BlogBaseLayout>
